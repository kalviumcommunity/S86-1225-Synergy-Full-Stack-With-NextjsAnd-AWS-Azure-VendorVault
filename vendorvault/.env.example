# ============================================
# DATABASE CONFIGURATION
# ============================================

# Local Development (Docker Compose)
DATABASE_URL="postgresql://postgres:password@localhost:5432/vendorvault_db"
DIRECT_URL="postgresql://postgres:password@localhost:5432/vendorvault_db"

# ──────────────────────────────────────────
# CLOUD DATABASE OPTIONS (Production)
# ──────────────────────────────────────────

# Option 1: AWS RDS PostgreSQL
# Replace with your actual RDS endpoint after provisioning
# Format: postgresql://username:password@endpoint:5432/database?schema=public&sslmode=require
# Example:
# DATABASE_URL="postgresql://vaultadmin:YOUR_PASSWORD@vendorvault-db.c9akl3scexz.us-east-1.rds.amazonaws.com:5432/vendorvault?schema=public&sslmode=require"

# Option 2: Azure Database for PostgreSQL  
# Replace with your actual Azure PostgreSQL endpoint
# Note: Username format includes @server-name, use %40 for URL encoding
# Format: postgresql://username%40server:password@server.postgres.database.azure.com:5432/database?schema=public&sslmode=require
# Example:
# DATABASE_URL="postgresql://vaultadmin%40vendorvault-server:YOUR_PASSWORD@vendorvault-server.postgres.database.azure.com:5432/vendorvault?schema=public&sslmode=require"

# Option 3: Other Managed PostgreSQL (Railway, Render, Supabase, etc.)
# Follow your provider's connection string format
# Always use sslmode=require for production

# Database credentials (used by Docker Compose and scripts)
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="vendorvault_db"
DB_USER="postgres"
DB_PASSWORD="password"

# ============================================
# REDIS CONFIGURATION (for caching)
# ============================================
REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD="your-redis-password"  # Uncomment if Redis requires authentication

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate JWT_SECRET with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long-change-this"
JWT_EXPIRY="24h"  # Token expiration: 15m, 1h, 24h, 7d

# Application URL (for email templates and redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# EMAIL CONFIGURATION (NodeMailer with SMTP)
# ============================================
# SMTP Host (Gmail, SendGrid, AWS SES, custom SMTP)
SMTP_HOST="smtp.gmail.com"

# SMTP Port (587 for TLS, 465 for SSL)
SMTP_PORT="587"

# Use SSL/TLS (true for port 465, false for others)
SMTP_SECURE="false"

# SMTP Authentication
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# From email address
EMAIL_FROM="VendorVault <noreply@vendorvault.com>"

# ============================================
# EMAIL SERVICE ALTERNATIVES
# ============================================
# Option 1: Gmail (for development/testing)
# - Enable 2FA on your Google account
# - Generate App Password: https://myaccount.google.com/apppasswords
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-16-char-app-password"

# Option 2: SendGrid
# SMTP_HOST="smtp.sendgrid.net"
# SMTP_PORT="587"
# SMTP_USER="apikey"
# SMTP_PASSWORD="your-sendgrid-api-key"

# Option 3: AWS SES
# SMTP_HOST="email-smtp.us-east-1.amazonaws.com"
# SMTP_PORT="587"
# SMTP_USER="your-aws-smtp-username"
# SMTP_PASSWORD="your-aws-smtp-password"

# ============================================
# AWS S3 CONFIGURATION (Optional - for cloud file storage)
# ============================================
# Leave empty to use local file storage
# AWS S3 is optional - local storage works fine for most deployments
AWS_REGION="ap-south-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_BUCKET_NAME="vendorvault-uploads"

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV="development"

# CLIENT-SIDE (exposed to browser; must start with NEXT_PUBLIC_)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_VERIFY_URL="http://localhost:3000/verify"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"
